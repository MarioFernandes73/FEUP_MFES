class Comment
types
	public String = seq of char;

instance variables
	private content : String;
	private author : User;
	--private date : Date;
	private rating : int;

operations
	public Comment(commentContent:String, commentAuthor:User) res: Comment == (	
		content := commentContent;
		author := commentAuthor;
		rating := 0;
	)
	post res.content = commentContent and res.author = commentAuthor and res.rating = 0;	
		
	public increaseRating() == (
		rating := rating + 1;
	);
	
	public decreaseRating() == (
		rating := rating - 1;
	);
	
	public editComment(newContent:String) == (
		content := newContent;
	)
	post content = newContent;

end Comment